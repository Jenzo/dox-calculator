<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<!-- Servlet configuration here. -->

	<display-name>Calculator</display-name>

	<context-param>
		<param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL
		</param-name>
		<param-value>true</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.WEBAPP_RESOURCES_DIRECTORY</param-name>
		<param-value>/WEB-INF/resources</param-value>
	</context-param>


	<!-- SERVLETS -->
	<servlet>
		<servlet-name>facesServlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>facesServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>


	<!-- FILTER -->
	<filter>
		<filter-name>LoginFilter</filter-name>
		<filter-class>login.LoginFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>LoginFilter</filter-name>
		<url-pattern>/secure/*</url-pattern>
	</filter-mapping>

	<!-- WELCOME PAGES -->
	<welcome-file-list>
		<welcome-file>*/login.xhtml</welcome-file>
	</welcome-file-list>

	<!-- DATASOURCE -->
	<data-source>
		<name>java:global/CalculatorDataSource</name>
		<class-name>org.h2.jdbcx.JdbcDataSource</class-name>
		<url>jdbc:h2:mem:CalculatorDataSource;DB_CLOSE_DELAY=-1</url>
	</data-source>
</web-app>